# syntax=docker/dockerfile:1
ARG PLONE_VERSION=6.1.2
FROM plone/server-builder:${PLONE_VERSION} AS builder

WORKDIR /app


# Add local code
COPY scripts/ scripts/
COPY . src

# Install local requirements and pre-compile mo files
RUN <<EOT
    set -e
    bin/pip install mxdev uv
    sed -i 's/-e .\[test\]/./g' src/mx.ini
    cd /app/src
    # remove potentially existing virtualenv from local build
    rm -rf .venv
    ../bin/mxdev -c mx.ini
    ../bin/uv pip install -r requirements-mxdev.txt
    ../bin/python /compile_mo.py
EOT

FROM plone/server-acceptance:${PLONE_VERSION}

LABEL maintainer="Digigroup e DTIC <vinicius@digigroup.com.br>" \
      org.label-schema.name="camara_de_curitiba-acceptance" \
      org.label-schema.description="CÃ¢mara de Curitiba backend acceptance image." \
      org.label-schema.vendor="Digigroup e DTIC"

ENV CONFIGURE_PACKAGES="plone.restapi,plone.volto,plone.volto.cors,camara_de_curitiba"
ENV APPLY_PROFILES="camara_de_curitiba:default"

# Copy /app from builder
COPY --from=builder /app /app

RUN <<EOT
    ln -s /data /app/var
EOT
